{
  "extends": ["@diegods-ferreira/eslint-config/node"],
  "rules": {
    "prettier/prettier": ["error", {
      "tabWidth": 2,
      "useTabs": false,
      "singleQuote": true,
      "semi": true,
      "bracketSpacing": true,
      "arrowParens": "avoid",
      "trailingComma": "none",
      "bracketSameLine": true,
      "printWidth": 140,
      "endOfLine": "auto"
    }]
  },
  "env": {
    "mocha": true
  }
}
